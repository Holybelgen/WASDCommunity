@model Wasd.Models.Group

@{
    ViewBag.Title = "CreateGroup";
}

<h2>Create a new group</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.groupName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.groupName)
                @Html.ValidationMessageFor(model => model.groupName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.aboutGroup, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.aboutGroup)
                @Html.ValidationMessageFor(model => model.aboutGroup)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to group list", "Groups")
</div>
